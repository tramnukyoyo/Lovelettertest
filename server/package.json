{
  "name": "unified-game-server",
  "version": "1.0.0",
  "description": "Unified server for multiple GameBuddies games",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --max-old-space-size=450 --optimize-for-size \"node_modules/tsx/dist/cli.mjs\" watch core/server.ts",
    "build": "tsc && node -e \"const fs = require('fs'); const path = require('path'); function copyJson(src, dest) { if (!fs.existsSync(dest)) fs.mkdirSync(dest, {recursive: true}); fs.readdirSync(src, {withFileTypes: true}).forEach(entry => { const srcPath = path.join(src, entry.name); const destPath = path.join(dest, entry.name); if (entry.isDirectory()) copyJson(srcPath, destPath); else if (entry.name.endsWith('.json')) fs.copyFileSync(srcPath, destPath); }); } copyJson('games', 'dist/games');\"",
    "start": "node --max-old-space-size=450 --optimize-for-size dist/core/server.js",
    "lint": "eslint core games --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:cluescale": "playwright test cluescale",
    "test:health": "playwright test server-health"
  },
  "keywords": [
    "gamebuddies",
    "multiplayer",
    "games"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "fast-json-patch": "^3.1.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "socket.io": "^4.7.5",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^4.1.12"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "playwright": "^1.56.1",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
